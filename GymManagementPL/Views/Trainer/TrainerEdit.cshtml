@model UpdateTrainerViewModel;
@{
	ViewData["Title"] = "Trainer Details";
}

<div class="container">

    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm border rounded-5 border-primary">
                <div class="card-body p-4">
                    <div class="mb-4 pb-3 border-bottom">
                        <header class="mb-4 border-bottom border-primary">
                            <h3 class="text-primary-color">Edit Trainer</h3>
                            <p class="text-muted">Update trainer information</p>
                        </header>
                        <small class="text-muted d-block mb-1">Editing Profile For</small>
                        <h4 class="mb-0">@Model.Name</h4>
                    </div>
                    <form asp-controller="Trainer" asp-action="TrainerEdit" method="post">
                        <input asp-for="Name" hidden readonly />

                        <!-- Personal Information -->
                        <div class="section-header mb-3">
                            <h5 class="text-primary fw-bold">Personal Information</h5>
                            <hr class="mt-2">
                        </div>
                        <div class="row g-3 mb-4">


                            <div class="col-md-6">
                                <label asp-for="Email" class="form-label">Email Address</label>
                                <input asp-for="Email" name="Email" type="text" class="form-control" />
                            </div>

                            <div class="col-md-6">
                                <label asp-for="Phone" class="form-label">Phone</label>
                                <input asp-for="Phone" name="Phone" type="text" class="form-control" />
                            </div>
                            <div class="col-md-6">
                                <label asp-for="BuildingNumber" class="form-label">BuildingNumber</label>
                                <input asp-for="BuildingNumber" name="BuildingNumber" type="text" class="form-control" />
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Street" class="form-label">Street</label>
                                <input asp-for="Street" name="Street" type="text" class="form-control" />
                            </div>
                            <div class="col-md-6">
                                <label asp-for="City" class="form-label">City</label>
                                <input asp-for="City" name="City" type="text" class="form-control" />
                            </div>
                        </div>

                        <!-- Professional Information -->
                        <div class="section-header mb-3">
                            <h5 class="text-primary fw-bold">Professional Information</h5>
                            <hr class="mt-2">
                        </div>
                        <div class="row g-3">

                            <div class="col-12">
                                <label class="form-label fw-semibold">
                                    Specializations <span class="text-danger">*</span>
                                </label>

                                @foreach (var speciality in Enum.GetValues(typeof(Specialities)))
                                {
                                    <div>
                                        <input asp-for="Specialities" type="radio" value="@speciality" id="@speciality" class="form-check-input" />
                                        <label for="@speciality">@speciality</label>
                                    </div>
                                }
                            </div>
                        </div>

                        <div class="d-flex justify-content-between mt-4 pt-3 border-top">
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left me-1"></i>Cancel
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-check-lg me-1"></i>Update Trainer
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>