@model SessionViewModel
@{
    ViewData["Title"] = "Session Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg border rounded-4">
                <div class="card-header rounded-top-4 @(Model.Status == "Ongoing" ? "bg-success" : Model.Status == "Upcoming" ? "bg-primary" : "bg-secondary") text-white text-center py-4">
                    <i class="bi bi-calendar-event display-4 mb-3"></i>
                    <h2 class="mb-2">@Model.CategoryName</h2>
                    <span class="badge bg-light text-dark fs-6">@Model.Status</span>
                </div>

                <div class="card-body p-4">
                    <!-- Description -->
                    <div class="mb-4 p-3 rounded">
                        <h6 class="text-primary-color mb-2">
                            <i class="bi bi-file-text me-2"></i>Description
                        </h6>
                        <p class="mb-0">@Model.Description</p>
                    </div>

                    <!-- Session Details -->
                    <div class="row g-4">
                        <div class="col-md-6">
                            <div class="detail-box p-3 border rounded">
                                <div class="d-flex align-items-center">
                                    <div class="icon-box me-3">
                                        <i class="bi bi-person-circle text-primary-color fs-3"></i>
                                    </div>
                                    <div>
                                        <small class="text-muted d-block">Trainer</small>
                                        <strong>@Model.TrainerName</strong>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="detail-box p-3 border rounded">
                                <div class="d-flex align-items-center">
                                    <div class="icon-box me-3">
                                        <i class="bi bi-people text-primary-color fs-3"></i>
                                    </div>
                                    <div>
                                        <small class="text-muted d-block">Capacity</small>
                                        <strong>@Model.AvailableSlots / @Model.Capacity slots</strong>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="detail-box p-3 border rounded">
                                <div class="d-flex align-items-center">
                                    <div class="icon-box me-3">
                                        <i class="bi bi-calendar-check text-primary-color fs-3"></i>
                                    </div>
                                    <div>
                                        <small class="text-muted d-block">Start Time</small>
                                        <strong>@Model.StartDate</strong>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="detail-box p-3 border rounded">
                                <div class="d-flex align-items-center">
                                    <div class="icon-box me-3">
                                        <i class="bi bi-calendar-x text-primary-color fs-3"></i>
                                    </div>
                                    <div>
                                        <small class="text-muted d-block">End Time</small>
                                        <strong>@Model.EndDAte</strong>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="col-12">
                            <div class="detail-box p-3 border rounded">
                                <div class="d-flex align-items-center">
                                    <div class="icon-box me-3">
                                        <i class="bi bi-hourglass-split text-primary-color fs-3"></i>
                                    </div>
                                    <div>
                                        <small class="text-muted d-block">Duration</small>
                                        <strong class="text-primary-color fs-5">
                                            @Model.Duration.Hours Hours @Model.Duration.Minutes Minutes
                                        </strong>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="card-footer border-0 p-4">
                    <div class="d-flex justify-content-between gap-2">
                        <a asp-action="Index" class="btn btn-outline-secondary flex-fill text-white text-muted">
                            <i class="bi bi-arrow-left me-1"></i>Back to List
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
