@model IEnumerable<MemberShipViewModel>

@{
    ViewData["Title"] = "Memberships";
}

<div class="container-fluid">
    <header class="rounded-3 p-4 shadow-sm mb-4">
        <div class="d-flex justify-content-between align-items-center">
            <div>
                <h2 class="mb-1 fw-bold text-primary">Active Memberships</h2>
                <p class="mb-0 opacity-75">Members That have Active Plans</p>
            </div>
            <div class="col text-end">
                <a asp-action="Create" class="btn btn-primary">
                    <i class="bi bi-plus"></i> New Membership
                </a>
            </div>
        </div>
    </header>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card">
        <div class="card-body">
            @if (Model.Any())
            {
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>Member</th>
                            <th>Plan</th>
                            <th class="d-none d-md-table-cell">Start Date</th>
                            <th class="d-none d-md-table-cell">End Date</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="fw-bold">@item.MemberName</td>
                                <td class="d-flex flex-column gap-1 d-md-table-cell">
                                    <span>@item.PlanName</span>
                                    <span class="d-md-none text-muted">from: @item.StartDate.ToString("MMM dd, yyyy")</span>
                                    <span class="d-md-none text-muted">to: @item.EndDate.ToString("MMM dd, yyyy")</span>
                                </td>
                                <td class="d-none d-md-table-cell">@item.StartDate.ToString("MMM dd, yyyy")</td>
                                <td class="d-none d-md-table-cell">@item.EndDate.ToString("MMM dd, yyyy")</td>
                                <td>
                                    <div class="d-flex gap-1">
                                        <form method="post" asp-action="Cancel" class="m-0">
                                            <input type="hidden" name="id" value="@item.MemberId" />
                                            <button type="submit" class="btn btn-sm btn-danger">
                                                <i class="fas fa-times"></i> Cancel
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>

            }
            else
            {
                <div class="text-center py-5">
                    <i class="bi bi-person-workspace display-1 text-muted"></i>
                    <h4 class="mt-3 text-muted">No Active Memberships Available</h4>
                </div>
            }

        </div>
    </div>
</div>