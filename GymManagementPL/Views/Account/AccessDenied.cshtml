@{
    ViewBag.Title = "Access Denied";
    Layout = null;
}
<!DOCTYPE html>
<html lang="en" data-bs-theme="light">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Access Denied - Fitness Gym</title>

    <!-- Bootstrap CSS -->
    <link href="~/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined" rel="stylesheet" />

    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: var(--bs-body-bg);
            color: var(--bs-body-color);
            transition: background-color 0.3s, color 0.3s;
        }

        .access-container {
            max-width: 900px;
            margin: 5rem auto;
            background-color: var(--bs-body-bg);
            border-radius: 12px;
            box-shadow: 0 4px 16px rgba(0, 0, 0, 0.1);
            padding: 3rem;
        }

        .error-icon {
            font-size: 4rem;
            color: #dc3545;
        }

        .error-highlight {
            color: #0d6efd;
        }

        .error-code {
            background-color: rgba(13, 110, 253, 0.05);
            padding: 0.75rem 1rem;
            border-radius: 8px;
            font-family: monospace;
        }

        .lock-icon {
            font-size: 6rem;
            opacity: 0.8;
        }
    </style>
</head>
<body>
    <div class="container d-flex flex-column align-items-center justify-content-center min-vh-100">
        <div class="access-container border rounded-5">
            <div class="row align-items-center g-4">
                <!-- Left Content -->
                <div class="col-md-7">
                    <div class="error-icon mb-3">🚫</div>
                    <h1 class="fw-bold mb-3">
                        Access <span class="error-highlight">Denied</span>
                    </h1>
                    <p class="text-muted">
                        We're sorry, but you don't have permission to access this resource. Your current user role or membership status doesn't grant you access to this section.
                    </p>
                    <div class="error-code my-3">
                        Error Code: 403 - Forbidden Access
                    </div>
                    <p class="text-muted mb-4">
                        If you believe this is an error or need elevated permissions, please contact the system administrator or your membership manager for assistance.
                    </p>
                    <a asp-action="Index" asp-controller="Home" class="btn btn-primary btn-lg px-4 d-flex align-items-center justify-content-center col-md-6">
                        <span class="material-symbols-outlined">
                            undo
                        </span>
                        Return to Home
                        </a>
                </div>

                <!-- Right Content -->
                <div class="col-md-5 text-center">
                    <div class="lock-icon">🔒</div>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS + Theme Toggle -->
    <script src="~/js/bootstrap.bundle.min.js"></script>

    <script>
        // Optional: Auto dark mode detection + toggle persistence
        const html = document.documentElement;
        const savedTheme = localStorage.getItem("theme");
        const prefersDark = window.matchMedia("(prefers-color-scheme: dark)").matches;
        const theme = savedTheme || (prefersDark ? "dark" : "light");
        html.setAttribute("data-bs-theme", theme);
    </script>
</body>
</html>
