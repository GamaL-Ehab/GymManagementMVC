@model CreateMemberViewModel
@{
    ViewData["Title"] = "Create Member";
}

<!-- Add Member Form -->
<div class="container mb-3">
    <div class="card shadow-lg border rounded-4">
        <div class="card-body p-4 p-md-5">
            <h3 class="fw-bold text-primary mb-4">
                <i class="bi bi-person-plus me-2"></i>Add New Member
            </h3>

            @Html.ValidationMessage("DataMissed", new { @class = "text-danger bg-danger-subtle w-100" })
            <form method="post" asp-action="CreateMember" enctype="multipart/form-data">
                <!-- Personal Information Section -->
                <div class="mb-5">
                    <h5 class="fw-bold text-secondary border-start border-4 border-primary ps-2 mb-3">
                        <i class="bi bi-person-circle me-2"></i>Personal Information
                    </h5>
                    <div class="row g-3">
                        <div class="form-group">
                            <!-- Photo Preview -->
                            <div class="mt-2">
                                <img id="photoPreview" src="" alt="Photo Preview" style="max-width: 200px; max-height:100px; display: none;" class="rounded-circle" />
                            </div>
                            <label asp-for="Photo" class="control-label">Profile Photo</label>
                            <input asp-for="Photo" type="file" class="form-control" accept="image/*" id="photoInput"/>
                            <span asp-validation-for="Photo" class="text-danger"></span>
                            <small class="form-text text-muted">Max size: 5 MB. Allowed types: JPG, PNG, JPEG</small>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="Name" class="form-label">Full Name <span class="text-danger">*</span></label>
                            <input asp-for="Name" type="text" class="form-control" placeholder="Enter full name"/>
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="Email" class="form-label">Email <span class="text-danger">*</span></label>
                            <input asp-for="Email" type="email" class="form-control" id="email" placeholder="Enter email address">
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="Phone" class="form-label">Phone <span class="text-danger">*</span></label>
                            <input asp-for="Phone" class="form-control" id="phone" placeholder="Enter phone number">
                            <span asp-validation-for="Phone" class="text-danger"></span>

                        </div>
                        <div class="col-md-6">
                            <label asp-for="DateOfBirth" class="form-label">Date of Birth <span class="text-danger">*</span></label>
                            <input asp-for="DateOfBirth" type="date" class="form-control" id="dob">
                            <span asp-validation-for="DateOfBirth" class="text-danger"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="Gender" class="form-label">Gender <span class="text-danger">*</span></label>
                            <select asp-for="Gender" class="form-select" asp-items="Html.GetEnumSelectList<Gender>()">
                                <option value="">Select gender</option>
                            </select>
                            <span asp-validation-for="Gender" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <!-- Address Information Section -->
                <div class="mb-5">
                    <h5 class="fw-bold text-secondary border-start border-4 border-success ps-2 mb-3">
                        <i class="bi bi-geo-alt me-2"></i>Address Information
                    </h5>
                    <div class="row g-3">
                        <div class="col-md-4">
                            <label asp-for="BuildingNumber" class="form-label">Building Number</label>
                            <input asp-for="BuildingNumber" class="form-control" placeholder="e.g. 12">
                            <span asp-validation-for="BuildingNumber" class="text-danger"></span>
                        </div>
                        <div class="col-md-4">
                            <label asp-for="Street" class="form-label">Street <span class="text-danger">*</span></label>
                            <input asp-for="Street" type="text" class="form-control" id="street" placeholder="Enter street name">
                            <span asp-validation-for="Street" class="text-danger"></span>
                        </div>
                        <div class="col-md-4">
                            <label asp-for="City" class="form-label">City <span class="text-danger">*</span></label>
                            <input asp-for="City" type="text" class="form-control" id="city" placeholder="Enter city">
                            <span asp-validation-for="City" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <!-- Health Record Section -->
                <div class="mb-5">
                    <h5 class="fw-bold text-secondary border-start border-4 border-danger ps-2 mb-3">
                        <i class="bi bi-heart-pulse me-2"></i>Health Record
                    </h5>
                    <div class="row g-3">
                        <div class="col-md-3">
                            <label asp-for="HealthRecordViewModel.Height" class="form-label">Height (cm) <span class="text-danger">*</span></label>
                            <input asp-for="HealthRecordViewModel.Height" type="number" class="form-control" id="height" placeholder="e.g. 175">
                            <span asp-validation-for="HealthRecordViewModel.Height" class="text-danger"></span>
                        </div>
                        <div class="col-md-3">
                            <label asp-for="HealthRecordViewModel.Weight" class="form-label">Weight (kg) <span class="text-danger">*</span></label>
                            <input asp-for="HealthRecordViewModel.Weight" type="number" class="form-control" id="weight" placeholder="e.g. 70">
                            <span asp-validation-for="HealthRecordViewModel.Weight" class="text-danger"></span>
                        </div>
                        <div class="col-md-3">
                            <label asp-for="HealthRecordViewModel.BloodType" class="form-label">Blood Type <span class="text-danger">*</span></label>
                            <select asp-for="HealthRecordViewModel.BloodType" id="blood" class="form-select">
                                <option value="">Select type</option>
                                <option>A+</option>
                                <option>A-</option>
                                <option>B+</option>
                                <option>B-</option>
                                <option>AB+</option>
                                <option>AB-</option>
                                <option>O+</option>
                                <option>O-</option>
                            </select>
                            <span asp-validation-for="HealthRecordViewModel.BloodType" class="text-danger"></span>
                        </div>
                        <div class="col-md-12">
                            <label asp-for="HealthRecordViewModel.Note" class="form-label">Health Notes</label>
                            <textarea asp-for="HealthRecordViewModel.Note" id="note" class="form-control" rows="3" placeholder="Add any relevant health notes..."></textarea>
                        </div>
                    </div>
                </div>

                <!-- Submit Button -->
                <div class="d-flex justify-content-end gap-3 border-top pt-4">
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="bi bi-x-circle"></i> Cancel
                    </a>
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-save"></i> Save Member
                    </button>
                </div>
            </form>

        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        // Preview photo before upload
        document.getElementById('photoInput').addEventListener('change', function(e) {
            var file = e.target.files[0];
            if (file) {
                var reader = new FileReader();
                reader.onload = function(e) {
                    var preview = document.getElementById('photoPreview');
                    preview.src = e.target.result;
                    preview.style.display = 'block';
                }
                reader.readAsDataURL(file);
            }
        });
    </script>
}