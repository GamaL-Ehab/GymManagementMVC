@model HealthRecordViewModel
@{
	ViewData["Title"] = "Health Record Details";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow border-primary rounded-5">
                <div class="card-header text-center py-4 border-primary rounded-top-5">
                    <h3 class="mb-1">Health Record</h3>
                </div>

                <div class="card-body p-4">
                    <div class="row g-4">
                        <div class="col-md-6">
                            <div class="card border p-4 h-100">
                                <div class="d-flex align-items-center mb-2">
                                    <div class="bg-primary rounded-circle p-2 me-3"
                                         style="width: 40px; height: 40px; display: flex; align-items: center; justify-content: center;">
                                        <span class="text-white fw-bold">H</span>
                                    </div>
                                    <h6 class="text-muted mb-0">Height</h6>
                                </div>
                                <h4 class="text-primary mb-0">@Model.Height<small>cm</small></h4>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="card border p-4 h-100">
                                <div class="d-flex align-items-center mb-2">
                                    <div class="bg-primary rounded-circle p-2 me-3"
                                         style="width: 40px; height: 40px; display: flex; align-items: center; justify-content: center;">
                                        <span class="text-white fw-bold">W</span>
                                    </div>
                                    <h6 class="text-muted mb-0">Weight</h6>
                                </div>
                                <h4 class="text-primary mb-0">@Model.Weight<small>kg</small></h4>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="card border p-4 h-100">
                                <div class="d-flex align-items-center mb-2">
                                    <div class="bg-danger rounded-circle p-2 me-3"
                                         style="width: 40px; height: 40px; display: flex; align-items: center; justify-content: center;">
                                        <span class="text-white fw-bold">B</span>
                                    </div>
                                    <h6 class="text-muted mb-0">Blood Type</h6>
                                </div>
                                <h4 class="text-danger mb-0"> @Model.BloodType </h4>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="card border p-4 h-100">
                                <div class="d-flex align-items-center mb-2">
                                    <div class="bg-warning rounded-circle p-2 me-3"
                                         style="width: 40px; height: 40px; display: flex; align-items: center; justify-content: center;">
                                        <span class="text-white fw-bold">N</span>
                                    </div>
                                    <h6 class="text-muted mb-0">Note</h6>
                                </div>
                                <h4 class="text-warning mb-0">@(!string.IsNullOrEmpty(Model.Note)? Model.Note : "No Note Found")</h4>
                            </div>
                        </div>
                    </div>

                    <div class="card-footer border-0 p-4 mt-3">
                        <div class="d-flex justify-content-between gap-2">
                            <a asp-controller="Member" asp-action="Index"
                               class="btn btn-outline-secondary flex-fill"> 
                                <i class="bi bi-arrow-left"></i>
                               Back to List
                           </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>