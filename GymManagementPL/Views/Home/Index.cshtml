@model AnalyticsViewModel;
@{
	ViewData["Title"] = "Home Page";
}

<!-- Page Heading -->
<div class="mb-4">
	<h1 class="fw-bold text-primary display-6">Dashboard</h1>
	<p class="text-muted">Welcome back, Manager!</p>
</div>

<!-- Stats Cards -->
<div class="row g-4 mb-4">
	<div class="col-md-8 col-xl-6 col-xxl-5">
		<div class="card p-3 rounded-4 border-primary">
			<h3>Members Overview</h3>
			<div class="d-flex flex-wrap justify-content-around text-center mt-3">
				<div class="col-4">
					<h3 class="fw-bold">@Model.TotalMembers</h3>
					<p class="text-muted small">Total <br class="d-sm-none"/> Members</p>
				</div>
				<div class="col-4">
					<h3 class="fw-bold text-success">@Model.ActiveMembers</h3>
					<p class="text-muted small ms-1">Active <br class="d-sm-none" /> Members</p>
				</div>
				<div class="col-4">
					<h3 class="fw-bold text-danger">@(Model.TotalMembers - Model.ActiveMembers)</h3>
					<p class="text-muted small ms-1">Inactive <br class="d-sm-none" /> Members</p>
				</div>
			</div>
		</div>
	</div>
	<div class="col-md-4 col-xl-2 order-last order-md-0 order-lg-last">
		<div class="card p-3 rounded-4 border-warning">
			<h3>Trainers</h3>
			<div class="text-center mt-3">
				<h3 class="fw-bold">@Model.TotalTrainers</h3>
				<p class="text-muted small">Total Trainers</p>
			</div>
		</div>
	</div>
	<div class="col-md-8 col-xl-6 col-xxl-5">
		<div class="card p-3 rounded-4 border-success">
			<h3>Sessions Overview</h3>
			<div class="d-flex flex-wrap justify-content-around text-center mt-3">
				<div class="col-4">
					<h3 class="fw-bold text-success">@Model.CompletedSessions</h3>
					<p class="text-muted small">Completed <br class="d-sm-none" /> Sessions</p>
				</div>
				<div class="col-4">
					<h3 class="fw-bold">@Model.OngoingSessions</h3>
					<p class="text-muted small ms-1">Ongoing <br class="d-sm-none" /> Sessions</p>
				</div>
				<div class="col-4">
					<h3 class="fw-bold text-primary">@Model.UpcomingSessions</h3>
					<p class="text-muted small ms-1">Upcoming <br class="d-sm-none" /> Sessions</p>
				</div>
			</div>
		</div>
	</div>
</div>

<!-- Main Grid -->
<div class="row g-4">
	<!-- Left Column -->
	<div class="col-lg-8">
		<div class="card p-4 mb-4">
			<h4 class="fw-bold mb-3">Upcoming Sessions Today</h4>

			<div class="list-group">
				<div class="list-group-item d-flex justify-content-between align-items-center bg-body-secondary rounded mb-2">
					<div class="d-flex align-items-center gap-3">
						<div class="bg-primary text-white d-flex justify-content-center align-items-center rounded p-2">
							<span class="material-symbols-outlined">fitness_center</span>
						</div>
						<div>
							<p class="fw-semibold mb-0">Morning HIIT Blast</p>
							<small class="text-muted">Anna Kendrick</small>
						</div>
					</div>
					<div class="text-end">
						<p class="fw-semibold mb-0">9:00 AM</p>
						<small class="text-muted">12 / 15 Registered</small>
					</div>
				</div>

				<div class="list-group-item d-flex justify-content-between align-items-center mb-2">
					<div class="d-flex align-items-center gap-3">
						<div class="bg-success text-white d-flex justify-content-center align-items-center rounded p-2">
							<span class="material-symbols-outlined">self_improvement</span>
						</div>
						<div>
							<p class="fw-semibold mb-0">Vinyasa Flow Yoga</p>
							<small class="text-muted">Mark Roberts</small>
						</div>
					</div>
					<div class="text-end">
						<p class="fw-semibold mb-0">12:30 PM</p>
						<small class="text-muted">8 / 10 Registered</small>
					</div>
				</div>

				<div class="list-group-item d-flex justify-content-between align-items-center">
					<div class="d-flex align-items-center gap-3">
						<div class="bg-danger text-white d-flex justify-content-center align-items-center rounded p-2">
							<span class="material-symbols-outlined">sports_mma</span>
						</div>
						<div>
							<p class="fw-semibold mb-0">Advanced Kickboxing</p>
							<small class="text-muted">Jessica Jones</small>
						</div>
					</div>
					<div class="text-end">
						<p class="fw-semibold mb-0">6:00 PM</p>
						<small class="text-muted">Full (5 waiting)</small>
					</div>
				</div>
			</div>
		</div>
	</div>

	<!-- Right Column -->
	<div class="col-lg-4">
		<div class="card p-4">
			<h4 class="fw-bold mb-3">Quick Actions</h4>
			<a asp-action="Create" asp-controller="Session" class="btn btn-outline-primary w-100 mb-2 d-flex justify-content-center p-2"><span class="material-symbols-outlined me-1">add</span>Create New Session</a>
			<a asp-action="Create" asp-controller="Membership" class="btn btn-outline-primary w-100 mb-2 d-flex justify-content-center p-2"><span class="material-symbols-outlined me-1">add_card</span>New Membership</a>
			<a asp-action="Create" asp-controller="Member" class="btn btn-outline-primary w-100 mb-2 d-flex justify-content-center p-2"><span class="material-symbols-outlined me-1">person_add</span>Add New Member</a>
		</div>
	</div>
</div>
